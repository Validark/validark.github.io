                       target={post.data.customURL ? "_blank" : ""}
                       rel={post.data.customURL ? "noopener noreferrer" : ""}
                       class="group btn-plain block h-10 w-full rounded-lg hover:text-[initial] xxxs:mt-[6rem] xxs:mt-[4rem] xs:mt-[3rem] sm:mt-[2.5rem] md:mt-[1rem] lg:mt-[1rem] xl:mt-[0.25rem]"
