---
import { Icon } from 'astro-icon/components'
import { profileConfig } from '../../config'
import { url } from '../../utils/url-utils'
import ImageWrapper from '../misc/ImageWrapper.astro'

const config = profileConfig
---
<div class="card-base p-3">
    <a aria-label="Go to GitHub Page" href='https://github.com/Validark'
       class="group block relative mx-auto mt-1 lg:mx-0 lg:mt-0 mb-3
       max-w-[240px] lg:max-w-none overflow-hidden rounded-full active:scale-95">
        <div class="absolute transition pointer-events-none group-hover:bg-white/20 group-active:bg-white/20
        w-full h-full z-50 flex items-center justify-center">
            <Icon name="fa6-brands:github"
                  class="transition opacity-0 scale-[5] group-hover:scale-[6.2] group-hover:opacity-100 text-white text-5xl"
                  style="color: #662f1e;">
            </Icon>
        </div>
        <ImageWrapper src={config.avatar || ""} alt="Profile Image of the Author" class="mx-auto lg:w-full h-full lg:mt-0 "></ImageWrapper>
    </a>
    <div class="px-2">
        <div class="font-bold text-xl text-center mb-1 dark:text-neutral-50 transition"><span class="prose custom-md"><a style="font-size: 15pt; text-decoration: none;" href="https://github.com/Validark">{config.name} / @{config.username}</a></span></div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>
        <div class="text-center text-neutral-400 mb-2.5 transition text-xl">{config.bio}</div>
        <div class="flex gap-2 justify-center mb-1">
            {config.links.length > 1 && config.links.map(item =>
                    <a rel="me" aria-label={item.name} href={item.url} target={item.url.startsWith("/") ? "" : "_blank"}
                                                    class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                        <Icon name={item.icon} class="text-[1.5rem]"></Icon>
                        {item.name}
                    </a>
            )}
            {config.links.length === 1 && <a rel="me" aria-label={config.links[0].name} href={config.links[0].url} target="_blank"
                                            class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                <Icon name={config.links[0].icon} class="text-[1.5rem]"></Icon>
                {config.links[0].name}
            </a>}
        </div>
    </div>
</div>
